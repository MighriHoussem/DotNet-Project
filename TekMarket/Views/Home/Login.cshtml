﻿@model TekMarket.Models.Client
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- //navigation -->
<!---728x90--->
<!-- breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <ol class="breadcrumb breadcrumb1 animated wow slideInLeft" data-wow-delay=".5s">
            <li><a href="index.html"><span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home</a></li>
            <li class="active">Login Page</li>
        </ol>
    </div>
</div>
<!-- //breadcrumbs -->
<!---728x90--->
<!-- login -->
<div class="login">
    <div class="container">
        <h2>Login Form</h2>
        @using (Html.BeginForm())
        {@Html.AntiForgeryToken()
        <div class="login-form-grids animated wow slideInUp" data-wow-delay=".5s">
            <form>
                
                <div class="form-group">
                    <label class="control-label" for="username">Username</label>
                    <input type="email" placeholder="example@gmail.com" title="Please enter your email" required="" value="" name="email" id="username" class="form-control">
                    <span class="help-block small">Your unique username to app</span>
                </div>
                <div class="form-group">
                    <label class="control-label" for="password">Password</label>
                    <input type="password" title="Please enter your password" placeholder="******" required="" value="" name="pwd" id="password" class="form-control">
                    <span class="help-block small">Your strong password</span>
                </div>
                <div class="forgot">
                    <a href="#">Forgot Password?</a>
                </div>
                <input type="submit" value="Login">
            </form>
        </div>
        <h4>For New People</h4>
        <p><a href="Home/Register">Register Here</a> (Or) go back to <a href="index.html">Home<span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span></a></p>
    }
    </div>
</div>
<!-- //login -->
