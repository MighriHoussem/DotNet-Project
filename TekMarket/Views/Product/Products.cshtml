<!--- products --->
<div class="products">
    <div class="container">
        <div class="col-md-4 products-left">
            <div class="categories">
                <h2>Categories</h2>
                <ul class="cate">
                    @foreach (Categorie c in Model.Categorie)
                    {
                        <li>
                            <a href="@Url.Action("SearchCategorie", "Product",new { id=c.id } )">
                                <i class="fa fa-arrow-right" aria-hidden="true"></i>@c.description
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <div class="col-md-8 products-right">
            @if ((Session["idcategorie"] == null) && (Session["Search"] == null))
            {
                foreach (Article c in Model.Article)
                {

                    <div class="agile_top_brands_grids">

                        <div class="hover14 column">
                            <div class="agile_top_brand_left_grid">
                                <!-- <div class="agile_top_brand_left_grid_pos">
                                    <img src="@Url.Content("~/Content/clientAssets/images/offer.png")" alt=" " class="img-responsive">
                                </div> -->
                                <div class="agile_top_brand_left_grid1">
                                    <figure>
                                        <div class="snipcart-item block">
                                            <div class="snipcart-thumb">

                                                @{ String imgurl = "~/UploadedImage/" + c.refarticle + ".jpg";

                                                }


                                                <a href="@Url.Action("Single", "Product", new { refarticle = c.refarticle })"><img width="150px" height="100px" title=" " alt=" " src=@Url.Content(imgurl)></a>
                                                <p>@c.libelle</p>
                                                <h4> @c.prix  dt </h4>
                                                <div class="snipcart-details top_brand_home_details">
                                                    @if (Session["idClient"] == null)
                                                    {
                                                        <form action="#" method="post">
                                                            <fieldset>
                                                                <input type="hidden" name="cmd" value="_cart">
                                                                <input type="hidden" name="add" value="1">
                                                                <input type="hidden" name="business" value=" ">
                                                                <input type="hidden" name="item_name" value=@c.refarticle>
                                                                <input type="hidden" name="amount" value=@c.prix>


                                                                <input type="hidden" name="currency_code" value="EUR">
                                                                <input type="hidden" name="return" value=" ">
                                                                <input type="hidden" name="cancel_return" value=" ">
                                                                <input type="submit" name="submit" value="Add to cart" class="button">
                                                                <br />
                                                                <br />
                                                            </fieldset>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        using (Html.BeginForm("Checkout", "Home", new { refarticle = c.refarticle, prix = c.prix }))
                                                        {
                                                            <button type="submit" style="
    background-color: #008CBA;
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;">
                                                                Add to cart
                                                            </button>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                    </figure>
                                </div>
                            </div>
                        </div>

                        <div class="clearfix"> </div>
                    </div>

